@model CotacaoModel
@{
    ViewData["Title"] = "Remover";
}
<div class="text-center">
    <h3>Deseja realmente Remover a Cotação (@Model.NumeroCotacao) ?</h3>
</div>
<a class="btn btn-primary" asp-action="Remover" asp-controller="Cotacao" asp-route-id="@Model.Id" role="button">Confirmar Exclusão</a>
<a class="btn btn-primary" asp-action="Index" asp-controller="Cotacao" role="button">Cancelar Exclusão</a>