@model List<CotacaoItemModel>
@{
    ViewData["Title"] = "Cotação Item";
}

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-lg-start">
        <a class="btn btn-primary" role="button" asp-controller="CotacaoItem" asp-action="Adicionar">Adidionar um novo item</a>
    </div>
    <h1 class="display-4"> Listagem itens de Cotação </h1>

    <table class="table" id="">
        <thead>
            <tr>

                <th scope="col">Descrição</th>
                <th scope="col">Numero do Item</th>
                <th scope="col">Preço</th>
                <th scope="col">Quantidade</th>
                <th scope="col">Marca</th>
                <th scope="col">Unidade</th>

            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (CotacaoItemModel cotacaoitem in Model)
                {
            <tr>

                <td scope="row">@cotacaoitem.Descricao</td>
                <td>@cotacaoitem.NumeroITem</td>
                <td>@cotacaoitem.Preco</td>
                <td>@cotacaoitem.Quantidade</td>
                <td>@cotacaoitem.Marca</td>
                <td>@cotacaoitem.Unidade</td>
                <td>
                    <div class="btn-group" role="group">
                        <a role="button" class="btn btn-primary" asp-route-id="@cotacaoitem.Id" asp-controller="CotacaoItem" asp-action="Editar">Editar</a>
                        <a role="button" class="btn btn-primary" asp-route-id="@cotacaoitem.Id" asp-controller="CotacaoItem" asp-action="Remover">Remover</a>
                    </div>
                </td>

            </tr>

                }
            }

        </tbody>

    </table>
</div>