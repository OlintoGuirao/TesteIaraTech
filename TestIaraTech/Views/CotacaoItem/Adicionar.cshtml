@model CotacaoItemModel
@{
    ViewData["Title"] = "Cadastrar Item para Cotação";
}

<div class="text-center">

    <h1 class="display-4">
        Cadastrar Cotação
    </h1>
</div>
<form asp-controller="CotacaoItem" asp-action="Adicionar" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputDescricao">Descrição</label>
            <input type="text" asp-for="Descricao" class="form-control" id="inputDescricao" placeholder="Descrição">
            @Html.ValidationMessageFor(x => x.Descricao)
        </div>
        <div class="form-group col-md-6">
            <label for="inputNumeroITem">Numero do Item</label>
            <input type="text" asp-for="NumeroITem" class="form-control" id="inputNumeroITem" placeholder="">
            @Html.ValidationMessageFor(x => x.NumeroITem)
        </div>
        <div class="form-group col-md-6">
            <label for="inputPreco">Preço</label>
            <input type="text" asp-for="Preco" class="form-control" id="inputPreco" placeholder="Preço do Item">
            @Html.ValidationMessageFor(x => x.Preco)
        </div>
    </div>
    <div class="form-group">
        <label for="inputQuantidade">Quantidade</label>
        <input type="datetime" asp-for="Quantidade" class="form-control" id="inputQuantidade" placeholder="">
        @Html.ValidationMessageFor(x => x.Quantidade)
    </div>
    <div class="form-group">
        <label for="inputMarca">Marca</label>
        <input type="datetime" asp-for="Marca" class="form-control" id="inputMarca" placeholder="">
        @Html.ValidationMessageFor(x => x.Marca)
    </div>
    <div class="form-group">
        <label for="inputUnidade">Unidade</label>
        <input type="text" asp-for="Unidade" class="form-control" id="inputUnidade">
        @Html.ValidationMessageFor(x => x.Unidade)
    </div>
    


    <div class="btn-group" role="group">
        <button type="submit" class="btn btn-light">Adicionar</button>
        <button class="btn btn-secondary" asp-controller="cotacaoItem" asp-action="Index" role="button">Voltar</button>
    </div>

</form>